<%- include ../partials/header.ejs %>

<section>
    <div class="container">
        <h1><%= title %></h1>

        <form method="post" action="/incident/update">
            <fieldset class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" placeholder="description" required></textarea>
            </fieldset>
            <fieldset class="form-group">
                <label for="priority">Priority</label>
                <select class="form-control" id="priority" name="priority">
                    <option value="1">1 (Low)</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5 (High)</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status" name="status">
                    <option value="1">Open</option>
                    <option value="2">In Progress</option>
                    <option value="3">Closed</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="narrativeTitle">Narrative Title</label>
                <input type="text" id="narrativeTitle" name="narrativeTitle" class="form-control" required>
            </fieldset>
            <fieldset class="form-group">
                <label for="narrativeBody">Narrative Description</label>
                <textarea class="form-control" id="narrativeBody" name="narrativeBody" placeholder="Narrative Description" required></textarea>
            </fieldset>
            <button type="submit" class="btn btn-primary">Update Ticket</button>
        </form>

    </div>
</section>
<%- include ../partials/footer.ejs %>
