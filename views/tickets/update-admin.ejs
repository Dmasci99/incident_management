<%- include ../partials/header.ejs %>

<section>
    <div class="container">
        <h1><%= title %></h1>

        <form method="post" action="/incident/update">
            <fieldset class="form-group">
                <label for="title">Title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="Title" required>
            </fieldset>
            <fieldset class="form-group">
                <label for="description">Description:</label>
                <textarea class="form-control" id="description" name="description" placeholder="description"
                          required></textarea>
            </fieldset>
            <fieldset class="form-group">
                <label for="status">Status</label>
                <select class="form-control" id="status" name="status">
                    <option value="Open">Open</option>
                    <option value="Assigned">Assigned</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Pending">Pending</option>
                    <option value="Resolved">Resolved</option>
                    <option value="Closed">Closed</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="priority">Priority</label>
                <select class="form-control" id="priority" name="priority">
                    <option value="1">1 (Low)</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6 (High)</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="impact">Impact</label>
                <select class="form-control" id="impact" name="impact">
                    <option value="1">1 (Low)</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6 (High)</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="urgency">Urgency</label>
                <select class="form-control" id="urgency" name="urgency">
                    <option value="1">1 (Low)</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6 (High)</option>
                </select>
            </fieldset>
            <fieldset class="form-group">
                <label for="narrativeTitle">Narrative Title</label>
                <input type="text" id="narrativeTitle" name="narrativeTitle" class="form-control" required>
            </fieldset>
            <fieldset class="form-group">
                <label for="narrativeBody">Narrative Description</label>
                    <textarea class="form-control" id="narrativeBody" name="narrativeBody"
                              placeholder="Narrative Description" required></textarea>
            </fieldset>
            <fieldset class="form-group">
                <div class="checkbox">
                    <input type="checkbox" name="isUrgent" id="isUrgent"> Is this ticket urgent?
                </div>
            </fieldset>
            <button type="submit" class="btn btn-primary">Update Ticket</button>
        </form>

    </div>
</section>
<%- include ../partials/footer.ejs %>
